@pytest.fixture(scope="package")
def sut():
    """
       Initialize the DSS SUT
       :return:
       """
    sut = ReportingSut()
    sut.init()
    yield sut
    sut.close()


@pytest.fixture(scope="function")
def user(sut):
    user = UserCreator(f"test_dss_{int(time.time())}")
    user.create()
    ReportManager().info(f"username {user.username} created")
    yield user
    user.close()
