         "Compression": "ZIP"}

    with When("Generate a uuid"):
        body = {"PatientUsername": user.username,
                    "UICulture": "en-GB",
                    "DateSeparator": "/",
                    "TimeSeparator": ":",
                    "LongTimePattern": "hh:mm:ss tt",
                    "ShortDatePattern": selected_day.strftime('%m/%d/%Y'),
